<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.greyfieldstudios.budger" >

    <!-- Used for Parse -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".Activites.DispatchActivity"
            android:label="@string/title_activity_dispatch" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Activites.SubmitBudgetActivity"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name=".Activites.DailyActivity"
            android:label="@string/title_activity_daily" >
        </activity>

        <activity
            android:name=".Activites.SignUpActivity"
            android:label="@string/title_activity_sign_up" >
        </activity>

        <activity
            android:name=".Activites.WelcomeActivity"
            android:label="@string/title_activity_welcome" >
        </activity>

        <activity
            android:name=".Activites.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>

    </application>

</manifest>
